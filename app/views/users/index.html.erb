<% #This is to display all the users in the database %>
<ul class='user-item-container'>
  <% @users.each do |user| %>
    <li class='user-item-content'>
      <%= image_tag user.photo, alt: "user photo", class: 'user-item' %>
      <p><%= link_to user.name, user_path(user) %></p>
      <p> Number of posts: <%=user.posts_counter%> </p>
    </li>
  <% end %>
</ul>